
public class Placa {
	String placa;
	int tipo;
	
	Placa(){
		placa = "";
		tipo = 0;
	}
	
	Placa(String placa, int tipo){
		this.placa = placa;
		this.tipo = tipo;
	}
	
	String getTipoString() {
		String p;
		if(tipo == 1) {
			p =  "Normal";
		}
		if(tipo == 2) {
			p = "Servico";
		}
		if(tipo == 3) {
			p = "Oficial";
		}
		if(tipo == 4) {
			p = "Auto Escola";
		}
		if(tipo == 5) {
			p = "Prototipo";
		}
		if(tipo == 6) {
			return "Colecionador";
		}
		else {
			return "Outros";
		}
		return "1";
	}
	
	boolean temEstacionamentoLivre() {
		if(tipo == 2 || tipo == 3) {
			return true;
		}
		else {
			return false;
		}	
	}
	
	String getDescricao(){
		return "Placa: placa="
	+placa+ ", tipo=" +getTipoString()+
	", estacionamentoLivre="
	+temEstacionamentoLivre() + ".";
	}

}
